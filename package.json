{
  "name": "opencode-sidebar-tui",
  "displayName": "OpenCode Sidebar TUI",
  "description": "Automatically render OpenCode TUI in VS Code sidebar with full terminal support",
  "version": "0.1.0",
  "publisher": "ilseoblee",
  "engines": {
    "vscode": "^1.106.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "opencode",
    "terminal",
    "sidebar",
    "tui",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ilseoblee/opencode-sidebar-tui"
  },
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:opencodeTui",
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opencodeTuiContainer",
          "title": "OpenCode",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "opencodeTuiContainer": [
        {
          "id": "opencodeTui",
          "name": "Terminal",
          "type": "webview",
          "icon": "$(terminal)",
          "contextualTitle": "OpenCode TUI"
        }
      ]
    },
    "commands": [
      {
        "command": "opencodeTui.start",
        "title": "Start OpenCode",
        "category": "OpenCode TUI"
      },
      {
        "command": "opencodeTui.restart",
        "title": "Restart OpenCode",
        "category": "OpenCode TUI"
      },
      {
        "command": "opencodeTui.clear",
        "title": "Clear Terminal",
        "category": "OpenCode TUI",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "opencodeTui.restart",
          "when": "view == opencodeTui",
          "group": "navigation@1"
        },
        {
          "command": "opencodeTui.clear",
          "when": "view == opencodeTui",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "OpenCode Sidebar TUI",
      "properties": {
        "opencodeTui.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start OpenCode when the view is activated"
        },
        "opencodeTui.command": {
          "type": "string",
          "default": "omo",
          "description": "Command to launch OpenCode (omo or opencode)"
        },
        "opencodeTui.fontSize": {
          "type": "number",
          "default": 14,
          "minimum": 6,
          "maximum": 25,
          "description": "Terminal font size in pixels"
        },
        "opencodeTui.fontFamily": {
          "type": "string",
          "default": "monospace",
          "description": "Terminal font family"
        },
        "opencodeTui.cursorBlink": {
          "type": "boolean",
          "default": true,
          "description": "Enable cursor blinking"
        },
        "opencodeTui.cursorStyle": {
          "type": "string",
          "default": "block",
          "enum": [
            "block",
            "underline",
            "bar"
          ],
          "description": "Cursor style"
        },
        "opencodeTui.scrollback": {
          "type": "number",
          "default": 10000,
          "minimum": 0,
          "maximum": 100000,
          "description": "Maximum number of lines in scrollback buffer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,md}\""
  },
  "dependencies": {
    "node-pty": "^1.2.0-beta.8",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "24.x",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.0",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0"
  }
}
